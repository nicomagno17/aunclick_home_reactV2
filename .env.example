# MySQL Database Configuration
# Replace these values with your actual database credentials
DB_HOST=your_database_host
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# Node Environment (development, production, test)
NODE_ENV=development

# NextAuth Configuration
# Generate NEXTAUTH_SECRET with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here_minimum_32_characters
NEXTAUTH_URL=http://localhost:3000

# Cookie Configuration (Optional)
# Set this to your domain in production for cookie scoping
# COOKIE_DOMAIN=yourdomain.com

# Password Hashing Configuration
# Bcrypt cost factor (higher is more secure but slower, recommended: 10-12)
# BCRYPT_COST=12

# Logging Configuration
# Log level: error, warn, info, debug
LOG_LEVEL=info

# Enable file logging in production (true/false)
LOG_TO_FILE=false

# Log file path (only used if LOG_TO_FILE=true)
LOG_FILE_PATH=./logs/app.log

# Log file max size in MB before rotation
LOG_MAX_FILE_SIZE=10

# Number of log files to keep
LOG_MAX_FILES=5

